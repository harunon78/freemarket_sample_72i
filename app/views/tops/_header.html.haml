.header
  .header__contents
    .header__contents__main
      = link_to image_tag(src= "header/logo.svg", class: ".header__contents__main__logo"),root_path
      = form_with(url: "#", local: true, method: :get, class: ".header__contents__main__form") do |form|
        = form.text_field :keyword, placeholder: "キーワードから探す", class: ".header__contents__main__form__text"
        = button_tag type: 'submit', class: "follow-btn" do
          = icon('fas', 'search')
    .header__contents__nav
      .header__contents__nav__left
        = link_to 'カテゴリー', "#", class: ".header__contents__nav__left__category"
        = link_to 'ブランド', "#", class: ".header__contents__nav__left__brand"
      .header__contents__nav__right
        - if user_signed_in?
          = link_to 'マイページ', users_show_path, class: ".header__contents__nav__right__mypage"
          = link_to 'ログアウト', destroy_user_session_path, method: :delete, class: ".header__contents__nav__right__logOut"
        - else
          = link_to 'ログイン', new_user_session_path, class: ".header__contents__nav__right__logIn"
          = link_to '新規会員登録', new_user_path, class: ".header__contents__nav__right__signUp"